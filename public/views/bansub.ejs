<div class="modal-dialog modal-md">
	<div class="modal-content">
	  <div class="modal-header">
	    <button class="close" data-dismiss="modal">&times;</button>
	    <h4>广告信息</h4>
	  </div>
	  <div class="modal-body">
	    <form action="/api/ban/addOrUpdate" method="post" enctype="multipart/form-data" id="postBanForm">
	  	  <input type="hidden" id="banid" name="banid" value="">
	      <div id="updateimg"></div>
	      <div class="form-group">
	        <label for="banner">广告图片</label>
	        <input type="file" accept="image/png,image/gif,image/jpeg" class="form-control" name="banimg" id="banimg" placeholder="请上传图片">
	      </div>
	      <div class="form-group">
	        <label for="positionName">广告名称</label>
	        <input type="text" class="form-control" name="imgname" id="imgname" placeholder="请输入广告名称">
	      </div>
	      <div class="form-group">
	        <label for="positionName">排序</label>
	        <input type="text" class="form-control" style="width:50px" name="sort" id="sort" value="0">
	      </div>
	    </form>
	  </div>
	  <div class="modal-footer">
	    <button id="submitBanBtn" class="btn btn-primary">提交</button>
	  </div>
	</div>
  </div>
